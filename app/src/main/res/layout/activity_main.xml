<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ice.santipapoill.duoproject.MainActivity"
    android:background="@drawable/unbg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editText"
        android:layout_marginTop="15dp"
        android:background="#aaffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:id="@+id/imageView"
                android:src="@drawable/cpu" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:id="@+id/imageView2"
                android:src="@drawable/ram" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:id="@+id/imageView3"
                android:src="@drawable/vga" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:id="@+id/imageView4"
                android:src="@drawable/hdd" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:id="@+id/imageView5"
                android:src="@drawable/mainboard" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:id="@+id/imageView6"
                android:src="@drawable/powersupply" />

        </LinearLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/listView" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:textSize="30sp"
        android:text="Com@Guid"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:background="#95ffffff" />

</RelativeLayout>
